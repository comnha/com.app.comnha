<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:popupMenuStyle">@style/AppTheme.PopupMenu</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppThem.LoadingDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:height">40dp</item>
        <item name="android:width">400dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppTheme.LocationDetial" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="AppTheme.SplashActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:statusBarColor">@color/colorPrimary</item>-->
        <!--<item name="android:background">@color/colorPrimary</item>-->
        <!--<item name="android:alertDialogTheme">@style/AlertDialog.AppCompat</item>-->
    </style>

    <style name="AppTheme.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <!--<item name="android:gravity">end|bottom</item>-->
        <item name="android:popupElevation">2.47dp</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ButtonGM" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@android:color/holo_red_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--trong layout, dùng android:theme="@style/BtnColored" mới có tác dụng-->
    <style name="AppTheme.ButtonFB" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@android:color/holo_blue_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ButtonPickTime" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textColor">#57d43d</item>
    </style>

    <style name="BtnColoredSaveEdt" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/admin_color_selection_news</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BtnColoredAttachedImg" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/color_notify_reportimg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BtnColoredRating" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/color_selection_report</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BtnBorderlessGreen" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textColor">@color/color_notify_reportfood</item>
    </style>

    <style name="BtnBorderlessRed" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textColor">@color/color_selection_report</item>
    </style>

    <style name="BtnBorderlessGrey" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.ButtonExit" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.ButtonSave" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AdminActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NotifyNewsAdminActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NotifyReportsAdminActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AddlocaUploadDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/addlocal_color_opentime</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="SignInUpEdt" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="SearchAtivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/color_notify_reportfood</item>
    </style>

    <style name="AddfoodDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#7fffffff</item>
        <item name="colorControlActivated">@color/admin_color_selection_news</item>
    </style>

    <style name="RatingBarWritePost" parent="Theme.AppCompat">
        <item name="colorControlNormal">#5a000000</item>
        <item name="colorControlActivated">@color/admin_color_selection_news</item>
    </style>

    <style name="AlbumViewPager" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/transparent</item>
    </style>

    <style name="BtnAllbum" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
