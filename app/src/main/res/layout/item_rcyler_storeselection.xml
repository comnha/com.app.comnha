<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_storeselect_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="8dp"
        android:paddingStart="8dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/item_storeselect_imgV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            app:civ_border_color="@android:color/transparent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_storeselect_txtvstorename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_storeselect_txtvaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1" />

            <TextView
                android:id="@+id/item_storeselect_txtvopentime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1" />

            <TextView
                android:id="@+id/item_storeselect_txtvphonenumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>