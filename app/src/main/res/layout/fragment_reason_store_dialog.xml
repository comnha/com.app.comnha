<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    tools:context="com.app.ptt.comnha.Fragment.EditStoreDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:src="@drawable/ic_logo"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_height="200dp" />
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="LÝ DO "
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/rb_lydo"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/rb_nd"
                    android:layout_height="wrap_content"
                    android:text="Nôi dung không chính xác"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/rb_khac"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết "
                    />


            </RadioGroup>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/edt_giaithich"
                android:layout_margin="10dp"
                android:background="?android:attr/colorControlActivated"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frg_reasonstore_btncancel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_cancel" />

            <Button
                android:id="@+id/frg_reasonstore_btnok"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_btnsendreport" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
