
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frg_post"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.app.ptt.comnha.Fragment.EditPostDialogFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/frg_addpost_Rmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/frg_post_cardv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    card_view:cardCornerRadius="@dimen/cardv_cornerRadius"
                    card_view:cardElevation="@dimen/cardv_elevation">
                    <LinearLayout
                        android:id="@+id/L_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:text="Sửa món ăn"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginBottom="40dp"
                            android:layout_height="wrap_content" />
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/edt_tenmon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|top"
                                android:hint="Tên món"
                                android:inputType="textEmailAddress" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/edt_gia"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Giá"
                                android:inputType="number" />
                        </android.support.design.widget.TextInputLayout>
                        <LinearLayout
                            android:layout_marginTop="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            >
                            <TextView
                                android:id="@+id/frg_filter_txtmon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:text="Đánh giá"
                                android:layout_marginRight="20dp"
                                android:textAllCaps="false"
                                />
                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="3"
                                android:stepSize="1"
                                android:rating="2"
                                android:id="@+id/item_rcyler_food_rb_rating"
                                android:layout_marginBottom="20dp"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/btn_OK"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="Đồng ý"
                                android:theme="@style/AppTheme.ButtonSave" />

                            <Button
                                android:id="@+id/btn_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="Trờ về"
                                android:theme="@style/AppTheme.ButtonSave" />

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
